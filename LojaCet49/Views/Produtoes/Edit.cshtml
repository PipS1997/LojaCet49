@model LojaCet49.Dados.Entidades.Produto

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UrlDaImagem" class="control-label"></label>
                <input asp-for="UrlDaImagem" class="form-control" />
                <span asp-validation-for="UrlDaImagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UltimaCompra" class="control-label"></label>
                <input asp-for="UltimaCompra" class="form-control" />
                <span asp-validation-for="UltimaCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UltimaVenda" class="control-label"></label>
                <input asp-for="UltimaVenda" class="form-control" />
                <span asp-validation-for="UltimaVenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Disponivel" /> @Html.DisplayNameFor(model => model.Disponivel)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
